<h2> Milestone details</h2>

<div class="white_bg">
<table border=1 class="listing" id="show">
	<thead>
		<tr>
			<th>Milestone ID</th>
			<td><%= @milestone.id%></td>
		</tr>
		<tr>
			<th>Milestone Name</th>
			<td><%= @milestone.name%></td>
		</tr>
		<tr>
				<th>Project ID</th>
				<td><%= @milestone.project_id%></td>
			</tr>
		<tr>
			<th>Start Date</th>
			<td><%= @milestone.start_date.strftime("%d/%m/%Y")%></td>
		</tr>
		<tr>
			<th>End Date</th>
			<td><%= @milestone.end_date.strftime("%d/%m/%Y")%></td>
		</tr>
		<tr>
			<th>Status</th>
			<td><%= @milestone.status%></td>
		</tr>
	</thead>
</table>
</div>