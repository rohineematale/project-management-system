<%= form_for([@project,@milestone]) do |m|%>
<% if @milestone.errors.present? %>
<ul class="warning">
	<% @milestone.errors.full_messages.each do |message| %>
	<li><%= message%></li>
	<% end %>
</ul>
<% end %>

<h2><%=hname%> Milestone</h2>

<div class="white_bg">
<table border=1 class="listing">
		<tr><th>Milestone ID</th><td><%= m.text_field :id %></td></tr>
		<tr><th>Milestone Name</th><td><%= m.text_field :name %></td></tr>
		<tr><th>Start Date</th><td><%= m.date_select :start_date %></td></tr>
		<tr><th>End Date</th><td><%= m.date_select :end_date %></td></tr>
		<tr><th>Status</th><td><%= m.select(:status, options_for_select(["Start","Inprocess","Finished"],:selected=>@milestone.status))%></td></tr>		
</table><br>
<center>
<%=	m.submit button %>
</center>
<% end %>
</div>