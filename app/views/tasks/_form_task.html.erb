<%= form_for([@project,@milestone,@task]) do |t| %>
<% if @task.errors.present? %>
<ul class="warning">
	<% @task.errors.full_messages.each do |message| %>
	<li><%= message%></li>
	<% end %>
</ul>
<% end %>

<h2><%=hname%> Task</h2>
<div class="white_bg">
<table border=1 class="listing">
		<tr><th>Task ID</th><td><%= t.text_field :id %></td></tr>
		<tr><th>Task Name</th><td><%= t.text_field :name %></td></tr>
		<tr><th>User ID</th><td><%= t.select(:user_id, @user.collect{|u|[u.name,u.id]})%></td></tr>
		<tr><th>Start Date</th><td><%= t.date_select :start_date %></td></tr>
		<tr><th>End Date</th><td><%= t.date_select :end_date %></td></tr>
		<tr><th>Status</th><td><%= t.select(:status, options_for_select(["Start","Inprocess","Finished"], :selected=>@task.status))%></td></tr>		
</table><br>
<center>
<%=	t.submit button %>
</center>
<% end %>
</div>